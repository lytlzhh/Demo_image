<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.administrator.demo_image.MainActivity">

    <TextView
        android:id="@+id/xiaomu_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40sp"
        android:text="小慕图片"
        android:textSize="20sp" />

    <Button
        android:id="@+id/primary_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="primary" />

    <Button
        android:id="@+id/primary_image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="primary1" />


    <Button
        android:id="@+id/primary_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="primary2" />
</LinearLayout>
